{
  "name": "Subnoto n8n Node",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "workspaceFolder": "/workspaces/n8n-node",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/n8n-node,type=bind,consistency=cached",
  "postCreateCommand": "npm install && npm run build",
  "forwardPorts": [5678],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "editorconfig.editorconfig"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "remoteEnv": {
    "N8N_CUSTOM_EXTENSIONS": "/workspaces/n8n-node"
  }
}
